---
import { restaurantConfig } from '../../data/restaurant.ts';
import SectionHeading from '../common/SectionHeading.astro';
---

<section 
  id="reservations" 
  class="relative py-16 md:py-2 overflow-hidden bg-gradient-to-b from-[#FAF7F2] via-[#F9F5EB] to-[#FAF7F2] 
          dark:from-[#0F0D0B] dark:via-[#1A1612] dark:to-[#0F0D0B] transition-all duration-1000"
>
  <!-- Fondo sutil de brasas ascendentes -->
  <div class="absolute inset-0 pointer-events-none opacity-40 dark:opacity-20">
    <div class="absolute top-1/4 left-1/5 w-96 h-96 bg-orange-500/20 rounded-full blur-3xl animate-ember-float animation-delay-[-3s]"></div>
    <div class="absolute top-1/3 right-1/4 w-80 h-80 bg-yellow-600/15 rounded-full blur-3xl animate-ember-float animation-delay-[-9s]"></div>
    <div class="absolute bottom-1/3 left-1/3 w-96 h-96 bg-red-700/20 rounded-full blur-3xl animate-ember-float animation-delay-[-6s]"></div>
    <div class="absolute bottom-1/4 right-1/5 w-80 h-80 bg-orange-600/15 rounded-full blur-3xl animate-ember-float animation-delay-[-12s]"></div>
  </div>

  <div class="relative max-w-5xl mx-auto px-6 z-10 text-center">
    <!-- Heading premium -->
    <div class="mb-16 animate-fade-in-up">
      <SectionHeading 
        title="Reserva tu mesa" 
        subtitle="Experiencias limitadas cada noche" 
        accentClass="text-gold drop-shadow-lg"
      />
    </div>

    <!-- BotÃ³n principal ultra premium -->
    <button 
      onclick="window.dispatchEvent(new Event('openReservationModal'))"
      class="group relative mx-auto block overflow-hidden rounded-3xl bg-gradient-to-r from-gold to-[#b38f2b] px-20 py-9 text-2xl font-bold text-black shadow-2xl transition-all duration-700 hover:scale-110 active:scale-95 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-gold/60"
    >
      <span class="relative z-10 flex items-center gap-4">
        Abrir calendario de reservas
        <span class="text-3xl transition-transform group-hover:rotate-12">ðŸ”¥</span>
      </span>
      <!-- Shine effect -->
      <div class="absolute inset-0 -translate-x-full bg-gradient-to-r from-transparent via-white/40 to-transparent skew-x-12 transition-transform duration-700 group-hover:translate-x-full"></div>
    </button>

    <!-- TelÃ©fono con icono y hover -->
    <div class="mt-14 flex flex-col items-center gap-3">
      <p class="text-lg text-gold/70">Â¿Prefieres reservar por telÃ©fono?</p>
      <a 
        href={`tel:${restaurantConfig.location.phone}`}
        class="group flex items-center gap-4 text-3xl font-medium text-gold hover:text-gold/90 transition-colors"
      >
        <span class="text-4xl transition-transform group-hover:scale-125">ðŸ“ž</span>
        {restaurantConfig.location.phone}
      </a>
    </div>
  </div>
</section>