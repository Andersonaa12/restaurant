---
interface Props {
  title: string;
  subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div class="text-center max-w-4xl mx-auto mb-24">
  <div class="flex items-center justify-center gap-4 mb-6">
    <div class="h-px w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
    <span class="text-primary text-xs tracking-[4px] font-medium uppercase">Brasas & Le√±os</span>
    <div class="h-px w-12 bg-gradient-to-r from-transparent via-primary to-transparent"></div>
  </div>
  
  <h2 class="font-display text-6xl md:text-7xl font-semibold tracking-[-3px] leading-none text-balance">
    {title}
  </h2>
  
  {subtitle && (
    <p class="mt-6 text-2xl text-accent/70 dark:text-accent/60 font-light">
      {subtitle}
    </p>
  )}
</div>